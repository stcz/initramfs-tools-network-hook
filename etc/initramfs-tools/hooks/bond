#!/bin/sh
PREREQ=""
prereqs()
{
     echo "$PREREQ"
}

case $1 in
prereqs)
     prereqs
     exit 0
     ;;
esac

. /usr/share/initramfs-tools/hook-functions
# Begin real processing below this line

if grep -rq ^BOND= /etc/initramfs-tools/initramfs.conf /etc/initramfs-tools/conf.d; then
    manual_add_modules bonding
fi
